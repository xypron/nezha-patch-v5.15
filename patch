git am $dir/0001-dt-bindings-rtc-sun6i-Clean-up-repetition.patch
git am $dir/0002-dt-bindings-rtc-sun6i-Add-H616-R329-and-D1-support.patch
git am $dir/0003-clk-sunxi-ng-div-Add-macro-using-CLK_HW_INIT_FW_NAME.patch
